  },
  "devDependencies": {
    "@types/jest": "^29.5.2",
    "esbuild": "^0.18.10",
    "esbuild-plugin-dev-server": "^1.1.3",
    "jest": "^29.5.0",
    "npm-dts": "^1.3.12",
    "prettier": "^2.8.8",
    "ts-jest": "^29.1.1",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0"
  },
  "files": [
    "src/*"
  ]
