{
  "name": "node-boilerplate",
  "version": "0.0.1",
  "description": "a scaffolding with basic tools installed",
  "repository": "https://github.com/plumberjack/node-boilerplate.git",
  "author": "NorweskiDrwal",
  "license": "MIT",
  "main": "main.ts",
  "types": "types.d.ts",
  "private": true,
  "scripts": {
